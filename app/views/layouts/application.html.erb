<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "Blocitoff", root_path %></li>
     <div class="pull-right user-info">
        <% if current_user %>
          <%= image_tag current_user.avatar_url(48), class: "gravatar" %>
          <div class="pull-right">
            <%= link_to current_user.email, user_path(current_user) %> <br/> <%= link_to "Sign Out", session_path(current_user), method: :delete %>
          </div>
        <% else %>
          <%= link_to "Sign In", new_session_path %> or
          <%= link_to "Sign Up", new_user_path %>
        <% end %>
      </div>
    </ul>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
